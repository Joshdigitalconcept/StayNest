{
  "entities": {
    "User": {
      "title": "User",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "firstName": { "type": "string" },
        "lastName": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "phone": { "type": "string" },
        "isHost": { "type": "boolean" },
        "isGuest": { "type": "boolean" },
        "accountStatus": { "type": "string", "enum": ["active", "suspended", "banned"] },
        "idVerified": { "type": "boolean" }
      }
    },
    "AdminRecord": {
      "title": "AdminRecord",
      "type": "object",
      "description": "Administrative privileges and roles mapping.",
      "properties": {
        "email": { "type": "string" },
        "name": { "type": "string" },
        "isSuperAdmin": { "type": "boolean" },
        "roles": { 
          "type": "array", 
          "items": { "type": "string", "enum": ["users", "listings", "content", "finance", "support", "super_admin"] } 
        },
        "grantedAt": { "type": "string", "format": "date-time" },
        "by": { "type": "string" }
      }
    }
  },
  "auth": {
    "providers": ["password", "google.com"]
  },
  "firestore": {
    "/users/{userId}": { "schema": { "$ref": "#/backend/entities/User" }, "description": "User profiles." },
    "/roles_admin/{userId}": { "schema": { "$ref": "#/backend/entities/AdminRecord" }, "description": "Admin access control." },
    "/listings/{listingId}": { "schema": "object", "description": "Property listings." },
    "/bookings/{bookingId}": { "schema": "object", "description": "Reservations." },
    "/settings/platform": { "schema": "object", "description": "Global config." }
  }
}
