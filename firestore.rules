
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // -------------------------------------------------------------------------
    // Helper Functions
    // -------------------------------------------------------------------------

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }
    
    // -------------------------------------------------------------------------
    // Collection Rules
    // -------------------------------------------------------------------------

    match /users/{userId} {
      allow get: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      allow list: if isAdmin();
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      allow delete: if isAdmin();

      match /favorites/{listingId} {
        allow read, write: if isSignedIn() && request.auth.uid == userId;
      }
    }

    match /roles_admin/{userId} {
      // Critical: Allow user to check their own admin status during login/routing
      allow get: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      allow list: if isAdmin();
    }

    match /listings/{listingId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && (resource.data.ownerId == request.auth.uid || isAdmin());
      
      match /reviews/{reviewId} {
        allow read: if true;
        allow create: if isSignedIn();
        allow update, delete: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin());
      }
    }
    
    match /bookings/{bookingId} {
      // Allow read if user is guest, host, or admin
      // Note: List queries must match these filters
      allow read: if isSignedIn() && (
        resource.data.guestId == request.auth.uid || 
        resource.data.hostId == request.auth.uid || 
        isAdmin()
      );
      
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (
        resource.data.guestId == request.auth.uid || 
        resource.data.hostId == request.auth.uid || 
        isAdmin()
      );
      allow delete: if isAdmin();

       match /messages/{messageId} {
         allow read, write: if isSignedIn();
       }
    }

    // -------------------------------------------------------------------------
    // Collection Group Rules
    // -------------------------------------------------------------------------
     
    match /{path=**}/messages/{messageId} {
       allow list: if isSignedIn();
    }
  }
}
