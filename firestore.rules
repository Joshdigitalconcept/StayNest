
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // -------------------------------------------------------------------------
    // Helper Functions
    // -------------------------------------------------------------------------

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }


    // -------------------------------------------------------------------------
    // Collection Rules
    // -------------------------------------------------------------------------

    match /users/{userId} {
      allow get: if true;
      allow list: if isAdmin();
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if (isOwner(userId) || isAdmin()) && request.resource.data.id == resource.data.id;
      allow delete: if (isOwner(userId) || isAdmin());

      match /favorites/{listingId} {
        allow read, write: if isOwner(userId);
      }
    }

    match /roles_admin/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow create, update, delete: if false;
    }

    match /listings/{listingId} {
      allow read: if true;
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      allow update: if (isSignedIn() && resource.data.ownerId == request.auth.uid) || isAdmin();
      allow delete: if (isSignedIn() && resource.data.ownerId == request.auth.uid) || isAdmin();
      
      match /reviews/{reviewId} {
        allow get, list: if true;
        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
      }
    }

    // Allow querying listings and bookings
    match /{path=**}/listings/{listingId} {
      allow list: if true;
    }

     match /{path=**}/bookings/{bookingId} {
      allow list: if isSignedIn();
    }
    
    // This allows a user to query for their unread messages across all bookings.
    // It's a bit of a workaround because Firestore doesn't have collection group queries
    // that can be secured with a dynamic path segment from the request.
    // By querying the top-level 'bookings' collection for messages where they are the receiver,
    // we can achieve the desired outcome.
    match /bookings/{bookingId} {
      allow get: if isSignedIn() && (resource.data.guestId == request.auth.uid || resource.data.hostId == request.auth.uid || isAdmin());
      allow create: if isSignedIn() && request.resource.data.guestId == request.auth.uid;
      allow update: if isSignedIn() && (resource.data.hostId == request.auth.uid || resource.data.guestId == request.auth.uid || isAdmin());
      allow delete: if isSignedIn() && (resource.data.guestId == request.auth.uid || isAdmin());

       match /messages/{messageId} {
         allow get, list: if isSignedIn() && (get(/databases/$(database)/documents/bookings/$(bookingId)).data.guestId == request.auth.uid || get(/databases/$(database)/documents/bookings/$(bookingId)).data.hostId == request.auth.uid);
         allow create: if isSignedIn() && (request.resource.data.senderId == request.auth.uid);
         allow update: if isSignedIn() && request.resource.data.receiverId == request.auth.uid && request.resource.data.isRead == true && resource.data.isRead == false;
         allow delete: if false;
       }
    }
     // Rule for querying unread messages across all bookings
    match /bookings/{bookingId}/messages/{messageId} {
      allow list: if isSignedIn() && request.query.offset == 0 && request.query.limit <= 1000 
                  && request.query.wheres[0][2] == request.auth.uid 
                  && request.query.wheres[0][0] == "receiverId"
                  && request.query.wheres[1][0] == "isRead"
                  && request.query.wheres[1][2] == false;
    }
  }
}
