
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // -------------------------------------------------------------------------
    // Helper Functions
    // -------------------------------------------------------------------------

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // -------------------------------------------------------------------------
    // Collection Rules
    // -------------------------------------------------------------------------

    match /users/{userId} {
      allow read, write: if isOwner(userId);
      
      match /favorites/{listingId} {
        allow read, write: if isOwner(userId);
      }
    }

    match /listings/{listingId} {
      allow read: if true;
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if isSignedIn() && resource.data.ownerId == request.auth.uid;
      
      match /reviews/{reviewId} {
        allow read: if true;
        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
      }
    }
    
    match /bookings/{bookingId} {
      allow get: if isSignedIn() && (resource.data.guestId == request.auth.uid || resource.data.hostId == request.auth.uid);
      // This rule allows a user to list bookings only if they are querying by their own guestId or hostId.
      allow list: if isSignedIn() && (request.query.get('guestId') == request.auth.uid || request.query.get('hostId') == request.auth.uid);
      allow create: if isSignedIn() && request.resource.data.guestId == request.auth.uid;
      allow update: if isSignedIn() && (resource.data.hostId == request.auth.uid || resource.data.guestId == request.auth.uid);
      allow delete: if isSignedIn() && resource.data.guestId == request.auth.uid;

       match /messages/{messageId} {
         allow get, list: if isSignedIn() && (get(/databases/$(database)/documents/bookings/$(bookingId)).data.guestId == request.auth.uid || get(/databases/$(database)/documents/bookings/$(bookingId)).data.hostId == request.auth.uid);
         allow create: if isSignedIn() && (request.resource.data.senderId == request.auth.uid);
         allow update: if isSignedIn() && request.resource.data.receiverId == request.auth.uid && request.resource.data.isRead == true && resource.data.isRead == false;
         allow delete: if false;
       }
    }

    // -------------------------------------------------------------------------
    // Collection Group Query Rules
    // -------------------------------------------------------------------------
     
    match /{path=**}/messages/{messageId} {
       allow list: if isSignedIn() && 'receiverId' in request.query.filters[0] && request.query.filters[0].receiverId == request.auth.uid;
    }
  }
}
